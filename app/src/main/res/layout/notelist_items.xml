<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_marginBottom="5dp"
    android:background="@android:color/white"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent">

<RelativeLayout
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_width="match_parent">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/noteImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The righteous by faith"
        android:padding="5dp"
        android:textSize="18sp"
        android:id="@+id/notetitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/noteImage"
        android:layout_toRightOf="@+id/noteImage"
        android:layout_toEndOf="@+id/noteImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="27/10/2016"
        android:id="@+id/notedate"
        android:layout_below="@+id/notetitle"
        android:layout_alignRight="@+id/notetitle"
        android:layout_alignEnd="@+id/notetitle" />
</RelativeLayout>

    </android.support.v7.widget.CardView>