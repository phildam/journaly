<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_marginBottom="5dp"
    android:layout_margin="8dp"

    android:background="@android:color/white"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/listImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorPrimaryDark"

            android:text="Human Prescription Drug"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:id="@+id/hpd"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/listImage"
            android:layout_toEndOf="@+id/listImage" />

        <TextView
            android:id="@+id/listText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:textStyle="italic"

            android:textColor="?attr/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/hpd"
            android:layout_toRightOf="@+id/listImage" />


            <TextView
                android:layout_width="200dp"
                android:padding="2dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/listImage"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"

                android:maxWidth="200dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?attr/colorPrimary"
                android:text="Manucfacturer Name"
                android:id="@+id/manucfacturer"
                android:gravity="end"
                android:textAlignment="textEnd" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
