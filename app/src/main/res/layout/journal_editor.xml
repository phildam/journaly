<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:weightSum="1">

            <TextView
                android:id="@+id/noteitemtextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.07"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall" />


            <EditText
                android:id="@+id/noteItemContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/editor"
                android:ems="10"
                android:hint="content"
                android:inputType="textMultiLine"
                android:textSize="10sp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/selectedPlace"
            android:layout_width="200dp"
            android:layout_gravity="start|top"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:src="@drawable/places_ic_clear"
            android:layout_width="90dp"
            android:layout_height="90dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.04"
        android:background="@color/white"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:background="@drawable/light"
            android:layout_width="0dp"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:src="@android:drawable/ic_menu_share"
            android:id="@+id/noteitemshare" />
        <ImageButton
            android:background="@drawable/light"
            android:layout_width="0dp"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:src="@android:drawable/ic_popup_reminder"
            android:id="@+id/noteitemedit" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="@drawable/light"
            android:layout_margin="3dp"
            android:layout_height="50dp"
            android:text="Delete"
            android:src="@android:drawable/ic_menu_delete"
            android:id="@+id/noteitemdelete" />
        <ImageButton
            android:id="@+id/place"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/light"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_dialog_map"
            android:text="location" />

        <ImageButton
            android:id="@+id/gallery"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/light"
            android:scaleType="centerInside"
            android:src="@android:drawable/picture_frame" />

        <ImageButton
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/light"
            android:onClick="showDatePicker"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_my_calendar" />

        <ImageButton
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:onClick="showTimePicker"
            android:background="@drawable/light"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_lock_idle_alarm" />

        <ImageButton
            android:id="@+id/noteitemsave"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/light"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_save"
            android:text="save" />
    </LinearLayout>
</LinearLayout>